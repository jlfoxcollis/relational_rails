        <th>Dealer Name</th>
        <th>Location</th>
        <th>Founded</th>
        <th>Open?</th>
      </tr>
    <tr>
    <td><%= @dealer.name %></td>
    <td><%= @dealer.city + ", " + @dealer.state %></td>
    <td><%= @dealer.created_at %></td>
    <td><%= @dealer.open %></td>
    </tr>
    </table>
