<html>
<head>
  <style>
    table, th, td {
      border: 1px solid black;
      text-align: left;
      padding: 5px;
    }

    th {
      font-weight: 900;
    }
  </style>
</head>
<body>
  <a href="/dealers/<%= @dealer.id %>"> Dealer Page</a>
  <a href="/dealers">Dealers Index</a>
  <a href="/trucks/">All Trucks Index</a>
  <a href="/dealers/<%= @dealer.id %>/trucks/new/?dealer_id=<%= @dealer.id %>">Adopt A Truck</a><br/>
  <%= form_tag do %>
  <div>
    <%= submit_tag 'Sort by make/model' %>
  </div>
  <% end %>
  <h2>Number of Trucks: <%= @dealer.trucks_count %></h2>
<table>
  <tr>
    <th>View Truck</th>
    <th>Year</th>
    <th>Make</th>
    <th>Model</th>
    <th>Dealer ID</th>
  </tr>
    <% @trucks.each do |truck| %>
    <tr>
      <td><a href="/trucks/<%= truck.id %>">View</a></td>
      <td><%= truck.year %></td>
      <td><%= truck.make %></td>
      <td><%= truck.model %></td>
      <td><%= truck.dealer_id %></td>

    </tr>
    <% end %>
  </table>
</body>
</html>
