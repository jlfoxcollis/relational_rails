<html>
  <head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
  </head>

  <body>
    <ul class="navbar">
      <li><a href="/">Home Page</a></li>
      <li><a href="/trucks">Trucks Index</a></li>
      <li><a href="/dealers/new">Add a Dealer</a></li>
    </ul>
    <h1 id="mainheader"> All Dealers</h1>
    <%= form_tag "/dealers", method: :get do %>
    <div>
      <%= submit_tag 'Sort Dealers by Trucks count' %>
    </div>
    <% end %><br>
    <table style="  border: 1px solid black;">
      <tr>
        <th>Dealer Name</th>
        <th>Creation Date</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
      <% @dealers.each do |dealer| %>
      <tr>
        <td><a href="/dealers/<%= dealer.id %>"><%= dealer.name %></a></td>
        <td><%= dealer.time_format %></td>
        <td><a href="/dealers/<%= dealer.id %>/edit">Edit</a></td>
        <td><%= link_to 'Delete', "/dealers/#{dealer.id}", method: :delete %></td>
      </tr>
      <% end %>
    </table>
  </body>
</html>
